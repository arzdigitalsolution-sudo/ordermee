{
    "name": "ordermee/clickcart",
    "description": "ClickCart.pk marketplace platform",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "ClickCart\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r 'if (!is_dir(\"public/uploads\")) mkdir(\"public/uploads\", 0775, true);'"
        ]
    }
}
